#!/usr/bin/env bash

if [[ $# -eq 0 ]]
then
    args=(chapter*/chapter*.md)
else
    args="$@"
fi

if [[ $# -eq 1 ]]
then
    out="${1%.*}.pdf"
else
    out="book.pdf"
fi

for path in "${args[@]}"
do
    names+=("${path%.*}.md")
done

if [[ $# -eq 1 ]]
then
    echo "Converting ${names[@]} to $out"
else
    echo "Combining"
    for path in "${names[@]}"
    do
        echo $path
    done
    echo "into $out"
fi

pandoc -t pdf \
       -o "$out" \
       -F pandoc-crossref \
       -M chapters \
       --pdf-engine=xelatex \
       --template templates/latex.template \
       --top-level-division=chapter \
       "${names[@]}"
